---
import { getCollection } from "astro:content";

import { IdeaPage, ModuleName } from "../features/AdminPanel/types/IdeaPage";
import AdminPanel from "../features/AdminPanel";

const giftsEntries = await getCollection("gifts");

const pages: IdeaPage[] = giftsEntries.map(i => ({
  title: i.data.title,
  slug: i.slug,
  category: i.data.category,
  modules: i.data.modules as ModuleName[] || [],
}));

import "../styles/global.scss";
---

<!doctype html>
<html lang='en'>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Lobster&display=swap"
      rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-reboot@4.5.6/reboot.min.css" rel="stylesheet">
</head>
<body>
  <AdminPanel pages={pages} client:only />
</body>
</html>