---
import Layout from "@layouts/Layout.astro";
import LinkButton from "@components/LinkButton.astro";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const giftsEntries = await getCollection("gifts");
const featured = giftsEntries.filter(i => i.data.featured);
---

<Layout title="Find the Perfect Presents for Every Occasion">
	<div class="container">
				<div class="intro">
					<h1 class="intro__heading">Gift Ideas <mark>2023</mark></h1>

					<h2 class="intro__subheading">Welcome to gift-idea.co!</h2>

					<p class="intro__text">Our mission is to take the stress out of gift shopping by offering a wide range of thoughtful and unique gift ideas tailored to various recipients.</p>
				</div>

				<div class="giftsContainer">
					<div class="gifts">
						{ featured.map((i) => (
							<a class="giftItem" href={`/gifts/${i.data.category}/${i.slug}`}>
								<Image
									class="img-cover"
									src={i.data.thumbnail}
									width="150"
									height="150"
									alt={i.data.title}
								/>
							</a>
						))}
					</div>
				</div>
	</div>
</Layout>

<style lang="scss">
	.container {
		display: flex;
		flex-flow: row wrap;
		min-height: 80vh;
		align-items: center;
		justify-content: center;
		gap: 15px;
	}

	.intro {
		max-width: 500px;
		margin-bottom: 15px;

		&__heading {
			font-size: 3.2rem;
			text-transform: uppercase;
			color: var(--c-primary-dark);
		}

		&__subheading {
			font-size: 2.2rem;
		}

		&__text {
			font-size: 1.15rem;
		}
	}

	.giftsContainer {
		max-width: 680px;
	}

	.gifts {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: repeat(3, 1fr);
		gap: 15px;
		margin-bottom: 1rem;
	}

	.giftItem {
		box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.3);
		transition: 0.3s;
		border: 3px solid #fff;
		border-radius: 3px;

		img {
			border-radius: 3px;
		}

		&:hover {
			box-shadow: 0 13px 21px -5px rgba(0, 0, 0, 0.3);
			transform: scale(1.03);
		}
	}
</style>