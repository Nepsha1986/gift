---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
import GiftPage from "@components/GiftPage.astro";
import { Image } from "astro:assets";
import { toCategoryName } from "@utils/toCategoryName";

export async function getStaticPaths() {
  const giftsEntries = await getCollection("gifts");

  return giftsEntries.map((entry) => ({
    params: { slug: entry.slug, category: entry.data?.category || "all" },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`Gift ideas: ${entry.data.title}`}>
  <GiftPage
    title={entry.data.title}
    category={toCategoryName(entry.data.category)}
    subtitle={entry.data.description}
    meta={entry.data?.meta}>
    <Image
      class="img-cover"
      slot="thumbnail"
      src={entry.data.thumbnail}
      width="900"
      height="450"
      alt={entry.data.title}
    />
    <Content slot="content" />
  </GiftPage>
</Layout>