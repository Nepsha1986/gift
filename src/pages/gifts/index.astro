---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import Layout from "@layouts/Layout.astro";
import GiftPage from "@components/GiftPage.astro";
import { toCategoryName } from "@utils/toCategoryName";

const giftsEntries = await getCollection("gifts");
const { Content } = await giftsEntries[0].render();
---

<Layout title="Gifts">
  <GiftPage
    title={giftsEntries[0].data.title}
    category={toCategoryName(giftsEntries[0].data.category)}
    subtitle={giftsEntries[0].data.description}
    meta={giftsEntries[0].data?.meta}
  >
    <Image
      class="img-cover"
      slot="thumbnail"
      src={giftsEntries[0].data.thumbnail}
      width="900"
      height="450"
      alt={giftsEntries[0].data.title}
    />
    <Content slot="content" />
  </GiftPage>
</Layout>