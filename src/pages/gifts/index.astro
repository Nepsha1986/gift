---
import Layout from "@layouts/Layout.astro";
import GiftPage from "@components/GiftPage.astro";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const giftsEntries = await getCollection("gifts")
const { Content } = await giftsEntries[0].render();
---

<Layout title="Gifts">
  <GiftPage title={giftsEntries[0].data.title}>
    <Image class="img-contain" slot="thumbnail" src={giftsEntries[0].data.thumbnail} width="900" height="450" alt={giftsEntries[0].data.title} />
    <Content slot="content" />
  </GiftPage>
</Layout>