---
const { link } = Astro.props;
---
<a class="category" href={link}>
  <div class="category__imgWrap">
    <slot name="img" />
  </div>

  <div class="category__text">
    <slot />
  </div>
</a>

<style is:global>
    .category__text strong {
        color: var(--c-primary);
    }
</style>

<style lang="scss">
	.category {
		display: inline-flex;
		align-items: center;
		gap: 10px;
		background: #fff;
		border-radius: 40px;
		margin-bottom: 1rem;
		box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.3);

		&__imgWrap {
			width: 100%;
			max-width: 76px;
			height: 76px;
			border-radius: 50%;
			margin-left: 2px;
			overflow: hidden;

			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center center;
			}
		}

		&__text {
			padding: 1rem;
			color: var(--c-grey-dark);
		}
	}
</style>