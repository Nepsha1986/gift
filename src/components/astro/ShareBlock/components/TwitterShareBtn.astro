---
import {faXTwitter} from '@fortawesome/free-brands-svg-icons';
import {FontAwesomeIcon} from '@fortawesome/react-fontawesome';

import ShareBtn from './ShareBtn.astro';

const { url= Astro.request.url } = Astro.props;

let URL = `https://twitter.com/intent/tweet?url=${url}`
---

<ShareBtn color="#00aced" href={URL}>
  <FontAwesomeIcon icon={faXTwitter} slot="icon" />
  Twitter
</ShareBtn>


