---
import {faTelegram} from '@fortawesome/free-brands-svg-icons';
import {FontAwesomeIcon} from '@fortawesome/react-fontawesome';

import ShareBtn from './ShareBtn.astro';

const { url= Astro.request.url } = Astro.props;

let URL = `https://t.me/share/url?url=${url}`
---

<ShareBtn color="#0088cc" href={URL}>
  <FontAwesomeIcon size="lg" icon={faTelegram} slot="icon" />
  Telegram
</ShareBtn>


