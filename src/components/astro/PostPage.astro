---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { ui } from "@i18n/ui";
import { formatDate } from "@utils/formatDate";

const lang = getLangFromUrl(Astro.url.pathname);
const t = useTranslations(lang, ui);
interface MetaInfo {
  age: string,
  priceRange: string,
}

type Author = {
  fullName: string;
  link: string;
}
interface Props {
  thumbnail: string;
  title: string;
  subtitle: string;
  content: any;
  author?: Author;
  date?: string;
}

const {thumbnail, title, content, subtitle, meta, author, date} = Astro.props;
---

<article class="post" data-pagefind-body>
  <header class="post__header">
    <div class="post__imgWrap">
      <slot name="thumbnail" class="post__img"/>
    </div>

    <div class="post__headerInfo">
      <div>
        <h1 class="post__title">{title}</h1>
        {author &&
          <div class="post__authorBlock">
            <address class="post__author">By <a rel="author" href={author.link}>{author.fullName}</a>, </address>
            <span>{formatDate(date)}</span>
          </div>
        }
        <p class="post__subtitle">{subtitle}</p>
      </div>
    </div>
  </header>

  <slot name="content"/>
</article>

<style lang="scss">
	.post {
      max-width: 900px;
      margin: 0 auto;

		&__title {
			font-size: 1.75rem;
			margin-bottom: 0;
		}

		&__subtitle {
			color: var(--c-grey-dark);
			font-style: italic;
		}

		&__authorBlock {
			font-style: italic;
			margin-bottom: 1rem;
		}

		&__author {
			font-style: italic;
			display: inline;
		}

		&__imgWrap {
			overflow: hidden;
      aspect-ratio: 3 / 1.3;
			margin: -1rem -15px 1rem -15px;
		}

		&__header {
			margin-bottom: 2rem;
		}

		&__headerInfo {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}
	}
</style>
