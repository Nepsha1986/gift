---
const { heading } = Astro.props;
---

<section class="section">
  <div class="section__container">
    <header class="section__header">
      <h1 class="section__heading">{heading}</h1>

      <div class="section__subheading">
        <slot name="subheading" />
      </div>
    </header>

    <div class="section__content">
      <slot />
    </div>
  </div>
</section>

<style lang="scss" is:global>
	.section__subheading {
		p {
			font-size: 1.1rem;
			font-weight: 400;
			color: var(--c-grey-dark);
		}

		strong {
			color: var(--c-primary);
		}
	}
</style>

<style lang="scss">
	.section {
		&__container {
			max-width: 1300px;
			height: 100%;
			padding: 3rem 15px;
			margin: 0 auto;
		}

		&__header {
			text-align: center;
			max-width: 800px;
			margin: 0 auto 2rem;
		}

		&__heading {
			font-size: clamp(1.6rem, 4vw, 2.6rem);
		}

		&__subheading {
			margin-bottom: 3rem;
		}
	}
</style>
