---
interface Props {
  link: string;
  text: string;
}

const { link, text } = Astro.props;
---

<a class="linkButton" href={link}>{text}</a>

<style lang="scss">
	.linkButton {
		display: inline-block;
		padding: 10px 35px;
		font-size: 1.1rem;
		background: var(--c-primary);
		color: #fff;
		border-radius: 3px;
		transition: 0.3s opacity;

		&:hover {
			opacity: 0.8;
		}
	}
</style>
